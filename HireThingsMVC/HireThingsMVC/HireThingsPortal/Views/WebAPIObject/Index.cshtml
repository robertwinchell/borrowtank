@model ASOL.HireThings.Model.WebApiObjectModel

@{
    ViewBag.Title = "Object";
}

@using (Ajax.BeginForm("Index", "WebApiObject", new AjaxOptions { }))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel">
                <header class="panel-heading oflo-h mb-lg">
                    <h2 class="pull-left panel-title text-dark-gray text-semibold text-uppercase pt-sm">@ViewData["FormTitle"]</h2>
                    <div class="pull-right"><input type="button" value="Back" class="btn btn-primary pull-right btn-sm" onclick="location.href='@Url.Action("Index","WebApiObjectSearch")'"></div>
                </header>
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.WAObjectId, "Object ID:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.WAObjectId, new { @class = "form-control", @readonly = true })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label for="ddlModule" class="col-lg-3 control-label">Module:</label>
                                <div class="col-lg-7">
                                    @Html.DropDownListFor(m => m.ModuleId, new SelectList(Model.ModuleList, "Value", "Text"), new { @id = "ddlModule", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.ModuleId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>                      
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.Name, "Name:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control ", @maxlength = "50" })
                                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.Description, "Description:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @maxlength = "500" })
                                </div>
                            </div>
                        </div>                        
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.URL, "URL:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @if (Model.WAObjectId > 0)
                                    {
                                        @Html.TextBoxFor(m => m.URL, new { @class = "form-control", @maxlength = "150", @readonly = true })
                                    }
                                    else
                                    {
                                        @Html.TextBoxFor(m => m.URL, new { @class = "form-control", @maxlength = "150" })
                                    }
                                </div>
                            </div>
                        </div>                        
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.AllowGet, "Allow Get:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7 va-bottom ib">
                                    @Html.CheckBoxFor(m => m.AllowGet, new { @class = "mt-sm" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.AllowPost, "Allow Post:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7 va-bottom ib">
                                    @Html.CheckBoxFor(m => m.AllowPost, new { @class = "mt-sm" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.AllowPut, "Allow Put:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7 va-bottom ib">
                                    @Html.CheckBoxFor(m => m.AllowPut, new { @class = "mt-sm" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.AllowDelete, "Allow Delete:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7 va-bottom ib">
                                    @Html.CheckBoxFor(m => m.AllowDelete, new { @class = "mt-sm" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.IsActive, "Is Active:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7 va-bottom ib">
                                    @Html.CheckBoxFor(m => m.IsActive, new { @class = "mt-sm" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Buttom Buttons -->
        <div class="col-lg-12">
            <p class="pull-right">
                <a role="button" class="btn btn-primary btn-sm" href="~/WebApiObjectSearch/Index">Cancel</a>
                &nbsp;
                @*<a role="button" class="btn btn-primary btn-sm" href="#">&nbsp;Save&nbsp;</a>*@
                <button type="submit" class="btn btn-primary btn-sm">&nbsp;Save&nbsp;</button>
            </p>
        </div>
    </div>
    <script src="~/Scripts/AppJS/webApiObject/hirethings.webapiobject.js"></script>

                <script>
                    HIRETHINGS.UI.WebApiObject.initialisePage(1);
    </script> 

    @*if (Model.WAObjectLevel > 0)
    {
        <script>
            $(document).ready(function () {
                //1 incase of record updation
            });
        </script>
    }
    else
    {
        <script>
            $(document).ready(function () {
                //0 incase of record creation
                HIRETHINGS.UI.Object.initialisePage(0);
            });
        </script>
    }*@
}
<!-- Content End -->