@model ASOL.HireThings.Model.HireThingsUser
@{
    ViewBag.Title = "User";
}
@using (Html.BeginForm("Index", "User", new { @id = "Userform" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <div class="row">
        <div class="col-lg-12">
            <div class="panel">
                <header class="panel-heading oflo-h mb-lg">
                    <h2 class="pull-left panel-title text-dark-gray text-semibold text-uppercase pt-sm">@ViewData["FormTitle"]</h2>
                    <div class="pull-right"><input type="button" value="Back" class="btn btn-primary pull-right btn-sm" onclick="location.href='@Url.Action("Index","UserSearch")'"></div>
                </header>
                <div class="panel-body pt-xlg">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.FirstName, "First Name:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @maxlength = "30" })
                                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.MiddleName, "Middle Name:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.MiddleName, new { @class = "form-control", @maxlength = "1" })
                                    @Html.ValidationMessageFor(m => m.MiddleName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.LastName, "Last Name:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @maxlength = "30" })
                                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.EmailId, "Email:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control", @readonly = true, @maxlength = "250" })
                                    @Html.ValidationMessageFor(m => m.EmailId, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-lg-2 text-danger">For User Login.</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.ConfirmEmailId, "Confirm Email:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.ConfirmEmailId, new { @class = "form-control firstTextBox hasKeyLocking", @maxlength = "250", @data_keylocking = "alphanumeric", @readonly = true })
                                    @Html.ValidationMessageFor(m => m.ConfirmEmailId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">

                                <label for="@Model.CountryList[0].Identifier" class="col-lg-3 control-label">Country:</label>
                                <div class="col-lg-7">
                                    @Html.Partial("~/Views/Shared/_Partial/_ddlWithClick.cshtml", Model.CountryList)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label for="@Model.LocationList[0].Identifier" class="col-lg-3 control-label">Location:</label>
                                <div class="col-lg-7">
                                    <div id="DivLocation">
                                        @Html.Partial("~/Views/Shared/_Partial/_ddlWithClick.cshtml", Model.LocationList)

                                    </div>
                                </div>
                            </div>
                        </div>
                       
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label for="ddlRole" class="col-lg-3 control-label">Role:</label>
                                <div class="col-lg-7">
                                    @Html.DropDownListFor(m => m.RoleId, new SelectList(Model.RoleList, "Value", "Text"), new { @id = "ddlRole", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.RoleId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                       
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.PhoneNo, "Phone:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">@Html.TextBoxFor(m => m.PhoneNo, new { @class = "form-control", @maxlength = "30" })</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label for="ddlSecurityQuestion" class="col-lg-3 control-label">Security Question:</label>
                                <div class="col-lg-7">
                                    @Html.DropDownListFor(m => m.SecurityQuestionID, new SelectList(Model.SecurityQuestionList, "Value", "Text"), new { @id = "ddlSecurityQuestion", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.SecurityQuestionID, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.SecurityAnswer, "Answer:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.SecurityAnswer, new { @class = "form-control", @maxlength = "1024" })
                                    @Html.ValidationMessageFor(m => m.SecurityAnswer, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                       
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.IsActive, "Is Active:", new { @class = "col-lg-3 ib control-label" })
                                <div class="col-lg-7 va-bottom ib">@Html.CheckBoxFor(m => m.IsActive, new { @class = "mt-sm" })</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Buttom Buttons -->
        <div class="col-lg-12">
            <p class="pull-right">
                <a role="button" class="btn btn-primary btn-sm" href="~/UserSearch/Index">Cancel</a>
                &nbsp;
                <button type="submit" class="btn btn-primary btn-sm">&nbsp;Save&nbsp;</button>
            </p>
        </div>
    </div>
}

<script src="~/Scripts/AppJS/shared/hirethings.shared.js"></script>
<script src="~/Scripts/AppJS/user/hirethings.user.js"></script>
@if (Model.CountryId > 0)
{

    <script>
        $(document).ready(function () {
            //1 incase of record updation
            HIRETHINGS.UI.User.initialisePage(1);
            HIRETHINGS.Global.ApplyMenuSelection('User');
        });
    </script>
}
else
{
    <script>

        $(document).ready(function () {
            //0 incase of record creation
            HIRETHINGS.UI.User.initialisePage(0);


        });
    </script>
}

<script>
    $(document).ready(function () {
        HIRETHINGS.UI.Shared.initialisePage('#Userform', '.listboxDiv');
    });

</script>