@model ASOL.HireThings.Model.CategorySearchViewModel
@{
    ViewBag.Title = "Category";
}
@using (Html.BeginForm("IndexEdit", "Category", FormMethod.Post, new { id = "CategorySearch" }))
{
    @Html.Hidden("hdnCategoryId")
    <div class="row">
        <div class="col-lg-12">
            <div class="panel CustomSearchBox">
                <div class="panel-body">
                    <div class="">
                        <div class="form-group">
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label for="txtSearch" class="control-label">Keyword</label>
                                <input type="text" class="form-control" id="txtSearch" />
                            </div>
                            <div class="col-sm-6">
                                <label for="ddlSearch" class="control-label">Search Field</label>
                                @Html.DropDownListFor(m => m.SearchId, new SelectList(Model.DDLSearch, "Value", "Text"), new { @id = "ddlSearch", @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <span class="visible-md visible-sm visible-xs">&nbsp;</span>
                                <input type="button" class="btn btn-primary" value="Search" id="btnCategorySearch" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="DivCategoryGrid">
        @Html.Partial("_CategoryGrid", Model.CategoryList)
    </div>
        
   
    <!-- Content End -->
}
<script src="~/Scripts/AppJS/Category/hirethings.category.search.js"></script>
<script>
    $(document).ready(function () {
        HIRETHINGS.UI.Category.Search.initialisePage();
    });

</script>