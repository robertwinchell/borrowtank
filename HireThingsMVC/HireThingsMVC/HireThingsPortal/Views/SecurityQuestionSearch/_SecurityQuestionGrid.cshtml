@model List<ASOL.HireThings.Model.ISecurityQuestionModel>
@if (Model != null && Model.Count > 0)
{
    @Html.Hidden("hdnCurrentPage", Model[0].CPage)
    @Html.Hidden("hdnTotalRecords", Model[0].TRows)
    @Html.Hidden("hdnPageSize", Model[0].PSize)

}
<div class="row">
    <div class="col-lg-12">
        <div class="panel">
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-none">
                        <thead>
                            <tr>
                                <th>Security Question ID</th>
                                <th>Security Question</th>
                                <th>Is Active</th>
                                <th width="60" class="text-right pb-sm">
                                    @if (ViewBag.AuthObj.AllowWrite)
                                    {
                                        <a class="AddGridIcon" data-toggle="tooltip" data-placement="top" data-original-title="Add" href="~/SecurityQuestion/Index">
                                            <i class="fa fa-plus"></i>
                                        </a>
                                    }
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.SecurityQuestionId</td>
                                        <td>@item.Question</td>
                                        <td>@item.IsActive</td>
                                        <td class="actions">
                                            @if (ViewBag.AuthObj.AllowWrite)
                                            {
                                                <a data-toggle="tooltip" data-placement="top" data-original-title="Edit" data-securityquestionid="@item.SecurityQuestionId" class="btnSecurityQuestionEdit Pointer">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                            }
                                            @if (ViewBag.AuthObj.AllowDelete)
                                            {
                                                <a data-toggle="tooltip" data-placement="top" class=" btnItemDelete Pointer" data-delitemid="@item.SecurityQuestionId" data-original-title="Delete">
                                                    <i class="fa fa-trash-o"></i>
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    @if (Model == null || Model.Count == 0)
                    {

                        @Html.Partial("~/Views/Shared/_Partial/_NoRecordFound.cshtml")
                    }
                </div>
                <div class="datatables-footer">
                    @if (Model != null && Model.Count > 0)
                    {
                        @Html.Partial("~/Views/Shared/_Partial/_Pagination.cshtml", Model[0].GetPageInfo(Model[0].CPage, Model[0].TPage, Model[0].TRows, Model[0].PSize, Model[0].UserId))
                    }
                </div>
            </div>
        </div>
    </div>
</div>
