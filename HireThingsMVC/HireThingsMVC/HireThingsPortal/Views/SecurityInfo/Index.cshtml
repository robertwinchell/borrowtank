@model ASOL.HireThings.Model.SecurityInfoViewModel
@{
    ViewBag.Title = "Change Security Info";
}

@using (Html.BeginForm("Index", "SecurityInfo", FormMethod.Post, new { @class = "form-horizontal", role = "form", autocomplete="off" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-lg-12">
            <div class="panel">
                <div class="panel-heading">
                    <h2 class="panel-title">Change Your Security Information</h2>
                </div>
                <div class="panel-body pt-xlg">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-sm-12">                                
                                @Html.LabelFor(m => m.SecurityQuestionId, "Select Security Question:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @Html.DropDownListFor(m => m.SecurityQuestionId, new SelectList(Model.DDLSecurityQuestion, "Value", "Text"), new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">                                
                                @Html.LabelFor(m => m.Answer, "Answer:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.Answer, new { @class = "form-control", @maxlength = "50" })
                                    @Html.ValidationMessageFor(m => m.Answer, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">                               
                                @Html.LabelFor(m => m.ConfirmAnswer, "Confirm Answer:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.ConfirmAnswer, new { @class = "form-control", @maxlength = "50", @autocomplete = "off" })
                                    @Html.ValidationMessageFor(m => m.ConfirmAnswer, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        @*<div class="row">
                            <hr class="solid">
                        </div>

                        <div class="form-group">
                            <div class="col-sm-12">                                
                                @Html.LabelFor(m => m.PIN, "Enter Your Password:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @Html.PasswordFor(m => m.PIN, new { @class = "form-control", @maxlength = "12", @autocomplete="off" })
                                    @Html.ValidationMessageFor(m => m.PIN, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>*@

                    </div>
                </div>
            </div>
        </div>


        <!-- Buttom Buttons -->
        <div class="col-lg-12">
            <p class="pull-right">
                <a role="button" class="btn btn-primary btn-sm" href="~/Dashboard/Index">Cancel</a>
                &nbsp;
                <button type="submit" role="button" class="btn btn-primary btn-sm" href="#">&nbsp;Save&nbsp;</button>
            </p>
        </div>
    </div>

}

<!-- ToolTip Script -->
<script type="text/javascript">
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
        HIRETHINGS.Global.ApplyMenuSelection('SecurityInfo');
    });
</script>
<script type="text/javascript">
    $(document).ready(function () {
        $('form[autocomplete="off"] input, input[autocomplete="off"]').each(function () {

            var input = this;
            var name = $(input).attr('name');
            var id = $(input).attr('id');

            $(input).removeAttr('name');
            $(input).removeAttr('id');

            setTimeout(function () {
                $(input).attr('name', name);
                $(input).attr('id', id);
            }, 1);
        });
        $(".tip-top").tooltip({ placement: 'top' });
        $(".tip-right").tooltip({ placement: 'right' });
        $(".tip-bottom").tooltip({ placement: 'bottom' });
        $(".tip-left").tooltip({ placement: 'left' });
    });
</script>
