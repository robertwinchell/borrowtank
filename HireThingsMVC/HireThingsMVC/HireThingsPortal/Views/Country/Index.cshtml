@model ASOL.HireThings.Model.CountryModel
@{
    ViewBag.Title = "Country";
}

    @ViewBag.Saved
    @using (Html.BeginForm("Index", "Country"))
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="panel">
                    <header class="panel-heading oflo-h mb-lg">
                        <h2 class="pull-left panel-title text-dark-gray text-semibold text-uppercase pt-sm">@ViewData["FormTitle"]</h2>
                        <div class="pull-right"><input type="button" value="Back" class="btn btn-primary pull-right btn-sm" onclick="location.href='@Url.Action("Index","CountrySearch")'"></div>
                    </header>
                    <div class="panel-body">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <div class="col-sm-12">                                    
                                    @Html.LabelFor(m => m.CountryId, "Country ID:", new { @class = "col-lg-3 control-label" })
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(m => m.CountryId, new { @class = "form-control CustomReadOnly", @readonly = true })
                                    </div>
                                </div>
                            </div>
                       
                            <div class="form-group">
                                <div class="col-sm-12">                                    
                                    <label for="txtCountry" class="col-lg-3 control-label">Country Name:</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(m => m.CountryName, new { @class = "form-control", @id = "txtCountry", @maxlength = "100" })
                                        @Html.ValidationMessageFor(m => m.CountryName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <div class="col-sm-12">                                    
                                    @Html.LabelFor(m => m.IsActive, "Is Active:", new { @class = "col-lg-3 control-label" })
                                    <div class="col-lg-7 va-bottom ib">
                                        @if(Model != null && Model.CountryId == 1)
                                        { 
                                            @Html.CheckBoxFor(m => m.IsActive, new { @class = "mt-sm", onclick = "return false" })
                                        }
                                        else
                                        {
                                            @Html.CheckBoxFor(m => m.IsActive, new { @class = "mt-sm"})
                                        }
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Buttom Buttons -->
            <div class="col-lg-12">
                <p class="pull-right">
                    <a role="button" class="btn btn-primary btn-sm" href="~/CountrySearch/Index">Cancel</a>
                    &nbsp;
                    <button type="submit" class="btn btn-primary btn-sm">&nbsp;Save&nbsp;</button>
                </p>
            </div>
        </div>
    <script>
        $(document).ready(function () {
       
        HIRETHINGS.Global.KeyLocking('.hasKeyLocking', 'data-keylocking');
        HIRETHINGS.Global.ApplyMenuSelection('Country');
    });
    </script>
    }


