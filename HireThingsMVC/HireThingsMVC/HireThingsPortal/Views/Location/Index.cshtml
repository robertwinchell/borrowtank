@model ASOL.HireThings.Model.LocationModel

@{
    ViewBag.Title = "Temperature Country";
}

<!-- Content Start -->

@using (Ajax.BeginForm("Index", "Location", new AjaxOptions { }))
    {
    <div class="row">
        <div class="col-lg-12">
            <div class="panel">
                <header class="panel-heading oflo-h mb-lg">
                    <h2 class="pull-left panel-title text-dark-gray text-semibold text-uppercase pt-sm">@ViewData["FormTitle"]</h2>
                    <div class="pull-right"><input type="button" value="Back" class="btn btn-primary pull-right btn-sm" onclick="location.href='@Url.Action("Index","LocationSearch")'"></div>
                </header>
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-sm-12">                                
                                @Html.LabelFor(m => m.LocationId, "Location ID:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">@Html.TextBoxFor(m => m.LocationId, new { @class = "form-control CustomReadOnly", @readonly = "true" })</div>
                            </div>
                        </div>
                      
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label for="ddlCountry" class="col-lg-3 control-label">Country:</label>
                                <div class="col-lg-7">
                                    @Html.DropDownListFor(m => m.CountryId, new SelectList(Model.CountryList, "Value", "Text"), new { @id = "ddlCountry", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.CountryId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                      
                      
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.LocationName, "Location Name:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.LocationName, new { @class = "form-control hasKeyLocking", @maxlength = "100", @data_keylocking = "alphanumeric" }) 
                                    @Html.ValidationMessageFor(m => m.LocationName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.ZipCode, "Zip Code:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control", @maxlength = "50" })
                                    @Html.ValidationMessageFor(m => m.ZipCode, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.IsActive, "Is Active", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7 va-bottom ib">
                                   @if (Model != null && Model.LocationId == 1)
                                   {
                                    @Html.CheckBoxFor(m => m.IsActive, new { @class = "mt-sm", onclick = "return false" })
                                   }
                                   else
                                   {
                                    @Html.CheckBoxFor(m => m.IsActive, new { @class = "mt-sm" })
                                   }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Buttom Buttons -->
        <div class="col-lg-12">
            <p class="pull-right">
                <a role="button" class="btn btn-primary btn-sm" href="~/LocationSearch/Index">Cancel</a>
                &nbsp;
                @*<a role="button" class="btn btn-primary btn-sm" href="#">&nbsp;Save&nbsp;</a>*@
                <button type="submit" class="btn btn-primary btn-sm">&nbsp;Save&nbsp;</button>
            </p>
        </div>
    </div>
    <script src="~/Scripts/AppJS/Location/hirethings.location.js"></script>
    }


<script>
    $(document).ready(function () {
        HIRETHINGS.Global.ApplyMasking('#Phone', 'usphone');
        HIRETHINGS.Global.ApplyMasking('#Fax', 'usphone');
        HIRETHINGS.Global.KeyLocking('.hasKeyLocking', 'data-keylocking');
        HIRETHINGS.Global.ApplyMenuSelection('Location');
        $("#customerorgid").focus();
    });
</script>