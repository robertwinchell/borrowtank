@model ASOL.HireThings.Model.ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Forgot your password?";
}

@using (Html.BeginForm("SecurityQuestion", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
       <!-- Content Start -->

    <section class="body-sign">
        <div class="center-sign">
            <div class="center mb-sm">
                <a href="#" class="logo">
                    <img src="~/Content/assets/images/logo-large.png" alt="HireThings" />
                </a>
            </div>

            <div class="panel panel-sign">
                <div class="panel-heading">
                    <h2 class="panel-title text-primary">Forgot Password</h2>
                    <p class="panel-subtitle">Please enter your email ID which you use to login.</p>
                </div>
                <div class="panel-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            <p class="m-none text-semibold h6">Provided email is not registered.</p>
                        </div>
                    }
                    <form action="index.html" method="post">
                        @*<div class="form-group mb-none pb-none">*@
                        <div class="mb-none pb-none">
                            @Html.LabelFor(m => m.EmailId, "Email")
                            <div class="input-group input-group-icon">
                                @*@Html.TextBoxFor(m => m.EmailId, new { @class = "form-control input-lg" })*@
                                @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control input-lg" })
                                @Html.ValidationMessageFor(m => m.EmailId, "", new { @class = "text-danger" })
                                @*@if (ViewBag.Error != null)
                                    {
                                        @Html.LabelFor(m => m.EmailId, "Provided email is not registered.", new { @id="emailInvalidErr", @class = "text-danger" })
                                    }*@
                                <span class="input-group-addon">
                                    <span class="icon icon-lg">
                                        <i class="fa fa-envelope"></i>
                                    </span>
                                </span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 text-right">
                                <button type="submit" class="btn btn-primary btn-block mt-lg">Next</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- Content End -->

}

<!-- ToolTip Script -->
<script type="text/javascript">
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
        $('#EmailId').on('change', function () {
            $('#emailInvalidErr').remove();
        });
    });
</script>
<script type="text/javascript">
    $(document).ready(function () {
        $(".tip-top").tooltip({ placement: 'top' });
        $(".tip-right").tooltip({ placement: 'right' });
        $(".tip-bottom").tooltip({ placement: 'bottom' });
        $(".tip-left").tooltip({ placement: 'left' });
    });
</script>

