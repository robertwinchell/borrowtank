@model ASOL.HireThings.Model.ChangePasswordViewModel
@{
    ViewBag.Title = "Change password";
}

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()



    <div class="row">
        <div class="col-lg-12">
            <div class="panel">
                <div class="panel-heading">
                    <h2 class="panel-title">Change Password</h2>
                </div>
                <div class="panel-body pt-xlg">
                    <div class="form-horizontal">

                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.OldPassword, "Old Password:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", autocomplete = "off", @maxlength = "12" })
                                    @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.NewPassword, "New Password:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @maxlength = "12" })
                                    @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.ConfirmNewPassword, "Confirm New Password:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control", @maxlength = "12" })
                                    @Html.ValidationMessageFor(m => m.ConfirmNewPassword, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Buttom Buttons -->
        <div class="col-lg-12">
            <p class="pull-right">
                <a role="button" class="btn btn-primary btn-sm" href="~/Dashboard/Index">Cancel</a>
                &nbsp;
                <button type="submit" role="button" class="btn btn-primary btn-sm">&nbsp;Save&nbsp;</button>
            </p>
        </div>
    </div>



}

<!-- ToolTip Script -->
<script type="text/javascript">
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
        HIRETHINGS.Global.ApplyMenuSelection('ChangePassword');
    });
</script>
<script type="text/javascript">
    $(document).ready(function () {
        $(".tip-top").tooltip({ placement: 'top' });
        $(".tip-right").tooltip({ placement: 'right' });
        $(".tip-bottom").tooltip({ placement: 'bottom' });
        $(".tip-left").tooltip({ placement: 'left' });
    });
</script>
