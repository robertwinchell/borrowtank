@model ASOL.HireThings.Model.WebApiUser
@{
    ViewBag.Title = "Web Api User";
}
@using (Html.BeginForm("Index", "WebApiUser", FormMethod.Post, new { @id = "Userform", @autocomplete = "off" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-lg-12">
            <div class="panel">
                <header class="panel-heading oflo-h mb-lg">
                    <h2 class="pull-left panel-title text-dark-gray text-semibold text-uppercase pt-sm">@ViewData["FormTitle"]</h2>
                    <div class="pull-right"><input type="button" value="Back" class="btn btn-primary pull-right btn-sm" onclick="location.href='@Url.Action("Index","WebApiUserSearch")'"></div>
                </header>
                <div class="panel-body pt-xlg">
                    <div class="form-horizontal">


                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.WAUserId, "User Id:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.WAUserId, new { @class = "form-control", @readonly = "true" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.EmailId, "Email:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @if (Model.WAUserId == null || Model.WAUserId == "0")
                                    {
                                        @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control firstTextBox", @maxlength = "250", @data_keylocking = "alphanumeric", @autocomplete = "off" })
                                    }
                                    else
                                    {
                                        @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control", @maxlength = "250", @data_keylocking = "alphanumeric", @autocomplete = "off", @readonly = "true" })
                                    }

                                    @Html.ValidationMessageFor(m => m.EmailId, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-lg-2 text-danger">For User Login.</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.ConfirmEmailId, "Confirm Email:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @if (Model.WAUserId == null || Model.WAUserId == "0")
                                    {
                                        @Html.TextBoxFor(m => m.ConfirmEmailId, new { @class = "form-control", @maxlength = "250", @data_keylocking = "alphanumeric", @autocomplete = "off" })
                                    }
                                    else
                                    {
                                        @Html.TextBoxFor(m => m.ConfirmEmailId, new { @class = "form-control", @maxlength = "250", @data_keylocking = "alphanumeric", @autocomplete = "off", @readonly = "true" })
                                    }

                                    @Html.ValidationMessageFor(m => m.ConfirmEmailId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        @if (Model.WAUserId == null || Model.WAUserId == "0")
                        {
                            <div class="form-group">
                                <div class="col-sm-12">
                                    @Html.LabelFor(m => m.Pin, "Password:", new { @class = "col-lg-3 control-label" })
                                    <div class="col-lg-7">
                                        @Html.PasswordFor(m => m.Pin, new { @class = "form-control", @maxlength = "12" })
                                        @Html.ValidationMessageFor(m => m.Pin, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    @Html.LabelFor(m => m.ConfirmPin, "Confirm Password:", new { @class = "col-lg-3 control-label" })
                                    <div class="col-lg-7">
                                        @Html.PasswordFor(m => m.ConfirmPin, new { @class = "form-control", @maxlength = "12" })
                                        @Html.ValidationMessageFor(m => m.ConfirmPin, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="form-group">
                            <div class="col-sm-12">

                                <label for="@Model.SystemList[0].Identifier" class="col-lg-3 control-label">Organization:</label>
                                <div class="col-lg-7">
                                    @Html.Partial("~/Views/Shared/_Partial/_ddlWithClick.cshtml", Model.SystemList)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label for="ddlRole" class="col-lg-3 control-label">Role:</label>
                                <div class="col-lg-7">
                                    @Html.DropDownListFor(m => m.WARoleId, new SelectList(Model.RoleList, "Value", "Text"), new { @id = "ddlRole", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.WARoleId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.FirstName, "First Name:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @maxlength = "30" })
                                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.MiddleName, "Middle Name:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.MiddleName, new { @class = "form-control", @maxlength = "1" })
                                    @Html.ValidationMessageFor(m => m.MiddleName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.LastName, "Last Name:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @maxlength = "30" })
                                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.PhoneNo, "Phone:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">@Html.TextBoxFor(m => m.PhoneNo, new { @class = "form-control hasKeyLocking", @data_keylocking = "numeric", @maxlength = "30" })</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.Address1, "Street:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.Address1, new { @class = "form-control", @maxlength = "100" })
                                    @Html.ValidationMessageFor(m => m.Address1, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.Address2, "City/State:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.Address2, new { @class = "form-control", @maxlength = "100" })
                                    @Html.ValidationMessageFor(m => m.Address2, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.Address3, "Country:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.Address3, new { @class = "form-control", @maxlength = "100" })
                                    @Html.ValidationMessageFor(m => m.Address3, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label for="ddlTimezone" class="col-lg-3 control-label">Time Zone:</label>
                                <div class="col-lg-7">
                                    @Html.DropDownListFor(m => m.TimeZoneId, new SelectList(Model.TimeZoneList, "Value", "Text"), new { @id = "ddlTimezone", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.TimeZoneId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.LabelFor(m => m.IsActive, "Is Active:", new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-7 va-bottom ib">@Html.CheckBoxFor(m => m.IsActive, new { @class = "mt-sm" })</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Buttom Buttons -->
        <div class="col-lg-12">
            <p class="pull-right">
                <a role="button" class="btn btn-primary btn-sm" href="~/WebApiUserSearch/Index">Cancel</a>
                &nbsp;
                <button type="submit" class="btn btn-primary btn-sm">&nbsp;Save&nbsp;</button>
            </p>
        </div>
    </div>
}
<script src="~/Scripts/AppJS/shared/hirethings.shared.js"></script>
<script src="~/Scripts/AppJS/webApiUser/hirethings.webapiuser.js"></script>
@if (Model.SystemId > 0)
{

    <script>
        $(document).ready(function () {
            //1 incase of record updation
            HIRETHINGS.UI.User.initialisePage(1);
        });
    </script>
}
else
{
    <script>

        $(document).ready(function () {
            //0 incase of record creation
            HIRETHINGS.UI.User.initialisePage(0);
        });
    </script>
}

<script>
    $(document).ready(function () {
        $('#Userform').submit(function (e) {
            $(".listBoxSel").each(function () {
                $(this).find('option').each(function () {
                    $(this).prop("selected", "true");
                });
            });
        });
        HIRETHINGS.UI.Shared.initialisePage('#Userform', '.listboxDiv');
    });

</script>