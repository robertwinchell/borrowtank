@model ASOL.HireThings.Model.WebApiRoleSearchViewModel
@{
    ViewBag.Title= "Web Api Role Search";
}

@using (Html.BeginForm("IndexEdit", "WebApiRole", FormMethod.Post, new { id = "WARoleSearch" }))
{
    @Html.Hidden("hdWARoleId")
    <!-- Content Start -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel CustomSearchBox">
                <div class="panel-body">
                    <div class="">
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label for="txtSearch" class="control-label">Search</label>
                                <input type="text" class="form-control" id="txtSearch" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <span class="visible-md visible-sm visible-xs">&nbsp;</span>
                                <input type="button" class="btn btn-primary" value="Search" id="btnWARoleSearch" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


        <div id="DivRoleGrid">
            @Html.Partial("_RoleGrid", Model.RoleList)
        </div>

        <script src="~/Scripts/AppJS/webApiRole/hirethings.webapirole.search.js"></script>
        <script>
        $(document).ready(function () {
            HIRETHINGS.UI.WebApiRole.Search.initialisePage();
        });
        </script>

}            <!-- Content End -->
