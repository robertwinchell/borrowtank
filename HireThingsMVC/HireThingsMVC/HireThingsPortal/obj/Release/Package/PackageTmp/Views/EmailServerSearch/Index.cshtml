
@model ASOL.HireThings.Model.EmailServerSearchViewModel
@{
    ViewBag.Title = "EmailServer";
}

@using (Html.BeginForm("IndexEdit", "EmailServer", FormMethod.Post, new { id = "EmailServerSearch" }))
{
    @Html.Hidden("hdnEmailServerId")

    <!-- Content Start -->
   
        <div class="row">
            <div class="col-lg-12">
                <div class="panel CustomSearchBox">
                    <div class="panel-body">
                        <div class="">

                            <div class="form-group">
                                <div class="col-sm-6">
                                    <label for="txtSearch" class="control-label">Keyword</label>
                                    <input type="text" class="form-control" id="txtSearch" />
                                </div>
                                <div class="col-sm-6">
                                    <label for="ddlSearch" class="control-label">Search Field</label>
                                    @Html.DropDownListFor(m => m.SearchId, new SelectList(Model.DDLSearch, "Value", "Text"), new { @id = "ddlSearch", @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-6">
                                    <span class="visible-md visible-sm visible-xs">&nbsp;</span>
                                    <input type="button" class="btn btn-primary" value="Search" id="btnEmailServerSearch" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="DivEmailServerGrid">
            @Html.Partial("_EmailServerGrid", Model.EmailServerList)
        </div>
        
        <script src="~/Scripts/AppJS/emailServer/hirethings.EmailServer.search.js"></script>
        <script>
        $(document).ready(function () {
            HIRETHINGS.UI.EmailServer.Search.initialisePage();
        });
        </script>

  
    <!-- Content End -->
}
