@{
    ViewBag.Title = "Password Reset";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@using (Html.BeginForm("Login", "Account", FormMethod.Get))
{
    @Html.AntiForgeryToken()
    <section class="body-sign">
        <div class="center-sign">
            <div class="center mb-sm">
                <a href="#" class="logo">
                    <img src="~/Content/assets/images/logo-large.png" alt="HireThings" />
                </a>
            </div>

            <div class="panel panel-sign">
                <div class="panel-heading">
                    <h2 class="panel-title text-success">Reset Password</h2>
                    <p class="panel-subtitle">An email with a link to reset your password has been sent to your email address.</p>
                </div>
                <div class="panel-body">
                    <form action="index.html" method="post">
                        <div class="row">
                            <div class="col-sm-12 text-right">
                                <button type="submit" class="btn btn-primary btn-block mt-none">Ok</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
}