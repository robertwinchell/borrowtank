@model ASOL.HireThings.Model.LocationSearchViewModel
@{
    ViewBag.Title = "Facility";
}

@using (Html.BeginForm("IndexEdit", "Location", FormMethod.Post, new { id = "LocationSearch" }))
{
@Html.Hidden("hdnLocationId")


    <div class="row">
        <div class="col-lg-12">
            <div class="panel CustomSearchBox">
                <div class="panel-body">
                    <div class="">
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label for="@Model.DDLCountry[0].Identifier" class="control-label">Country</label>

                                @Html.Partial("~/Views/Shared/_Partial/_ddlWithClick.cshtml", Model.DDLCountry)
                            </div>
                          
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label for="txtSearch" class="control-label">Keyword</label>
                                <input type="text" class="form-control" id="txtSearch" />
                            </div>
                            <div class="col-sm-6">
                                <label for="ddlSearch" class="control-label">Search Field</label>
                                @Html.DropDownListFor(m => m.SearchId, new SelectList(Model.DDLSearch, "Value", "Text"), new { @id = "ddlSearch", @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <span class="visible-md visible-sm visible-xs">&nbsp;</span>
                                <input type="button" class="btn btn-primary" value="Search" id="btnLocationSearch" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
    <div id="DivLocationGrid">
        @Html.Partial("_LocationGrid", Model.LocationList)
    </div>
    <script src="~/Scripts/AppJS/Location/hirethings.location.search.js"></script>
    <script>
        $(document).ready(function () {
            HIRETHINGS.UI.Location.Search.initialisePage();
        });
    </script>
    
}
