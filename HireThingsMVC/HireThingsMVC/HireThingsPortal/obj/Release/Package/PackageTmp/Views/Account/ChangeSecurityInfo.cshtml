@model ASOL.HireThings.Model.ChangeSecurityInfoViewModel
@{
    ViewBag.Title = "Change Security Information";
}

@using (Html.BeginForm("ChangeSecurityInfo", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
            <div class="col-lg-12">
                <div class="panel">
                    <div class="panel-heading">
                        <h2 class="panel-title">Change You Security Information</h2>
                    </div>
                    <div class="panel-body pt-xlg">
                        <div class="form-horizontal">

                            <div class="form-group">
                                <div class="col-sm-12">
                                    @Html.LabelFor(m => m.SecurityQuestionId, "Select Secuerity Question:", new { @class= "col-lg-3 control-label" })
                                    <div class="col-lg-7">
                                        @Html.DropDownListFor(m => m.SecurityQuestionId,new SelectList(Model.DDLSecurityQuestion,"Value","Text"), new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    @Html.LabelFor(m => m.Answer, "Answer:", new { @class = "col-lg-3 control-label" })
                                    <label for="Answer" class="col-lg-3 control-label">Answer:</label>
                                    <div class="col-lg-7">
                                        @Html.PasswordFor(m => m.Answer, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Answer, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    @Html.LabelFor(m => m.ConfirmAnswer, "Confirm Answer:", new { @class = "col-lg-3 control-label" })
                                    <label for="ConfirmAnswer" class="col-lg-3 control-label">Confirm Answer:</label>
                                    <div class="col-lg-7">
                                        @Html.PasswordFor(m => m.ConfirmAnswer, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.ConfirmAnswer, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Buttom Buttons -->
            <div class="col-lg-12">
                <p class="pull-right">
                    <a role="button" class="btn btn-primary btn-sm" href="#">Cancel</a>
                    &nbsp;
                    <button type="submit" role="button" class="btn btn-primary btn-sm" href="#">&nbsp;Save&nbsp;</button>
                </p>
            </div>
        </div>
}

<!-- ToolTip Script -->
<script type="text/javascript">
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
        $(".tip-top").tooltip({ placement: 'top' });
        $(".tip-right").tooltip({ placement: 'right' });
        $(".tip-bottom").tooltip({ placement: 'bottom' });
        $(".tip-left").tooltip({ placement: 'left' });
    });
</script>
