@model ASOL.HireThings.Model.UserSearchViewModel
@{
    ViewBag.Title = "User";
}
@using (Html.BeginForm("IndexEdit", "User", FormMethod.Post, new { id = "UserSearch" }))
{
    @Html.Hidden("hdnUserId")
    <div class="row">
        <div class="col-lg-12">
            <div class="panel CustomSearchBox">
                <div class="panel-body">
                    <div class="">
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label for="@Model.DDLCountry[0].Identifier" class="control-label">Country</label>

                                @Html.Partial("~/Views/Shared/_Partial/_ddlWithClick.cshtml", Model.DDLCountry)
                            </div>
                            <div class="col-sm-6">
                                <label for="@Model.DDLLocation[0].Identifier" class="control-label">Location</label>
                                <div id="DivLocation">
                                    @Html.Partial("~/Views/Shared/_Partial/_ddlWithClick.cshtml", Model.DDLLocation)

                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label for="txtSearch" class="control-label">Keyword</label>
                                <input type="text" class="form-control" id="txtSearch" />
                            </div>
                            <div class="col-sm-6">
                                <label for="ddlSearch" class="control-label">Search Field</label>
                                @Html.DropDownListFor(m => m.SearchId, new SelectList(Model.DDLSearch, "Value", "Text"), new { @id = "ddlSearch", @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <span class="visible-md visible-sm visible-xs">&nbsp;</span>
                                <input type="button" class="btn btn-primary" id="btnUserSearch" value="Search" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="DivUserGrid">
        @Html.Partial("_UserGrid", Model.UserList)
    </div>
    <script src="~/Scripts/AppJS/user/hirethings.user.search.js"></script>

    <script>
        $(document).ready(function () {
            HIRETHINGS.UI.User.Search.initialisePage();

        });
    </script>

}

