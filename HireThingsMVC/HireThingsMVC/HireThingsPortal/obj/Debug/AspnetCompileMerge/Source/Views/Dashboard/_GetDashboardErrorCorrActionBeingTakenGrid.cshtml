-->
@if (Model != null && Model.Count > 0)
{
        <!-- Table 1 -->
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <header class="panel-heading">
                    <div class="panel-actions pull-right"><a class="fa fa-caret-down" href="#"></a></div>
                    <h2 class="panel-title text-danger"><strong>CORRECTIVE ACTION IN PROGRESS</strong></h2>
                </header>
                <div class="panel-body">
                    <div class="table-responsive" style="max-height: 220px; overflow: auto;">
                        <table id="tblDashErrorInProgGrid" class="table table-striped table-hover mb-none">
                            <thead>
                                <tr>
                                    <th>Organization Name</th>
                                    <th>Equipment Name</th>
                                    <th>Last Reading</th>
                                    <th>Reason For Alert</th>
                                    <th>Alert Time</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr @{if (@item.SuppressStatus) { @Html.Raw("class='warning'")     ; }}>
                                            <td>@item.OrganizationName</td>
                                            <td>@item.DeviceName</td>
                                            <td>@item.CurrentTemp <sup>o</sup>C</td>
                                            <td>
                                                &nbsp;
                                                @if (@item.ErrorCode == 5)
                                                {
                                                    <i class="fa fa-long-arrow-up text-danger">&nbsp;&nbsp;</i>
                                                }
                                                else if (@item.ErrorCode == 6)
                                                {
                                                    <i class="fa fa-long-arrow-down text-danger">&nbsp;&nbsp;</i>
                                                }
                                                else
                                                {
                                                    <i class="fa fa-ban text-danger">&nbsp;&nbsp;</i>
                                                }
                                                @item.ErrorReason
                                            </td>
                                            <td>@item.ErrorDateTZ</td>
                                            <td class="actions">
                                                <a class="toggleActionTakenModal Pointer" data-table="2" data-dasherrorid="@item.DashBoardErrorId" data-errordate="@item.ErrorDate" data-placement="top" data-original-title="Action Taken">
                                                    <i data-toggle="tooltip" data-placement="top" data-original-title="Action Taken" class="fa fa-check-square-o"></i>
                                                </a>

                                                @if (!@item.SuppressStatus)
                                                {
                                                    <a class="toggleSuppressModal Pointer" data-table="2" data-dasherrorid="@item.DashBoardErrorId" data-placement="top" data-original-title="Action Taken">
                                                        <i data-toggle="tooltip" data-placement="top" data-original-title="Suppress" class="fa fa-eye-slash"></i>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a class="toggleSuppressModal Pointer text-danger" data-table="2" data-dasherrorid="@item.DashBoardErrorId" data-placement="top" data-original-title="Action Taken">
                                                        <i class="fa fa-eye" data-original-title="Un-Suppress" data-placement="top" data-toggle="tooltip"></i>
                                                    </a>
                                                }

                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                        @if (Model == null || Model.Count == 0)
                        {

                            @Html.Partial("~/Views/Shared/_Partial/_NoRecordFound.cshtml")
                        }
                    </div>
                    <div class="datatables-footer">
                        <span class="CustomPagination-TotalRecord">
                            <span class="ib va-bottom">
                                Total
                                <span id="dashErrorInProgCount">
                                    @if (Model != null && Model.Count > 0)
                                    { @Model[0].TRows}
                                    else
                                    {@Html.Raw("0");
                                    }
                                </span> Records
                            </span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

}