@model MEPS.MEPSTemp.Model.MEPSTempUser
@{
    ViewBag.Title = "User";
}
@using (Html.BeginForm("Index", "User",new { @id = "Userform" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <div class="row">
        <div class="col-lg-12">
            <div class="panel">
                <header class="panel-heading oflo-h mb-lg">
                    <h2 class="pull-left panel-title text-dark-gray text-semibold text-uppercase pt-sm">@ViewData["FormTitle"]</h2>
                    <div class="pull-right"><input type="button" value="Back" class="btn btn-primary pull-right btn-sm" onclick="location.href='@Url.Action("Index","UserSearch")'"></div>
                </header>
                <div class="panel-body pt-xlg">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">Email:</label>
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control", @readonly = true, @maxlength = "250" })
                                    @Html.ValidationMessageFor(m => m.EmailId, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-lg-2 text-danger">For User Login.</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">Confirm Email:</label>
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.ConfirmEmailId, new { @class = "form-control firstTextBox hasKeyLocking", @maxlength = "250", @data_keylocking = "alphanumeric", @readonly = true })
                                    @Html.ValidationMessageFor(m => m.ConfirmEmailId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">

                                <label class="col-lg-3 control-label">System:</label>
                                <div class="col-lg-7">
                                    @Html.Partial("~/Views/Shared/_Partial/_ddlWithClick.cshtml", Model.SystemList)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">Organization:</label>
                                <div class="col-lg-7">
                                    <div id="DivOrganization">
                                        @Html.Partial("~/Views/Shared/_Partial/_ddlWithClick.cshtml", Model.OrganizationList)

                                    </div>
                                </div>
                            </div>
                        </div>
                        @Html.Partial("~/Views/Shared/_Partial/_Listbox.cshtml", Model.DeviceGropList)
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">Role:</label>
                                <div class="col-lg-7">
                                    @Html.DropDownListFor(m => m.RoleId, new SelectList(Model.RoleList, "Value", "Text"), new { @id = "ddlRole", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.RoleId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">First Name:</label>
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @maxlength = "30" })
                                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">Middle Name:</label>
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.MiddleName, new { @class = "form-control", @maxlength = "1" })
                                    @Html.ValidationMessageFor(m => m.MiddleName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">Last Name:</label>
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @maxlength = "30" })
                                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">Gender:</label>
                                <div class="col-lg-7">
                                    @Html.DropDownListFor(m => m.GenderId, new SelectList(Model.GenderList, "Value", "Text"), new { @id = "ddlGender", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.GenderId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">Date of Birth:</label>
                                <div class="col-lg-7">
                                    <div class='input-group date datepicker'>
                                        @Html.TextBoxFor(m => m.DOB, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.DOB, "", new { @class = "text-danger" })
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">Phone:</label>
                                <div class="col-lg-7">@Html.TextBoxFor(m => m.PhoneNo, new { @class = "form-control", @maxlength = "30" })</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">Street:</label>
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.Address1, new { @class = "form-control", @maxlength = "100" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">City/State:</label>
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.Address2, new { @class = "form-control", @maxlength = "100" })
                                    @Html.ValidationMessageFor(m => m.Address2, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">Country:</label>
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.Address3, new { @class = "form-control", @maxlength = "100" })
                                    @Html.ValidationMessageFor(m => m.Address3, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">Security Question:</label>
                                <div class="col-lg-7">
                                    @Html.DropDownListFor(m => m.SecurityQuestionID, new SelectList(Model.SecurityQuestionList, "Value", "Text"), new { @id = "ddlSecurityQuestion", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.SecurityQuestionID, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">Answer:</label>
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.SecurityAnswer, new { @class = "form-control", @maxlength = "1024" })
                                    @Html.ValidationMessageFor(m => m.SecurityAnswer, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">Time Zone:</label>
                                <div class="col-lg-7">
                                    @Html.DropDownListFor(m => m.TimeZoneId, new SelectList(Model.TimeZoneList, "Value", "Text"), new { @id = "ddlTimezone", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.TimeZoneId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 ib control-label">Is Active:</label>
                                <div class="col-lg-7 va-bottom ib">@Html.CheckBoxFor(m => m.IsActive, new { @class = "mt-sm" })</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Buttom Buttons -->
        <div class="col-lg-12">
            <p class="pull-right">
                <a role="button" class="btn btn-primary btn-sm" href="~/UserSearch/Index">Cancel</a>
                &nbsp;
                <button type="submit" class="btn btn-primary btn-sm">&nbsp;Save&nbsp;</button>
            </p>
        </div>
    </div>
}

<script src="~/Scripts/AppJS/shared/mepstemp.shared.js"></script>
<script src="~/Scripts/AppJS/user/mepstemp.user.js"></script>
@if (Model.SystemId > 0)
{

    <script>
        $(document).ready(function () {
            //1 incase of record updation
            MEPSTEMP.UI.User.initialisePage(1);
            MEPSTEMP.Global.ApplyMenuSelection('User');
        });
    </script>
}
else
{
    <script>

        $(document).ready(function () {
            //0 incase of record creation
            MEPSTEMP.UI.User.initialisePage(0);
        });
    </script>
}

<script>
        $(document).ready(function () {
            $("#Userform").submit(function (e) {
                alert("aa");
                $(".listBoxSel").each(function () {
                    $(this).find('option').each(function () {
                        $(this).prop("selected", "true");
                    });
                });
            });
            MEPSTEMP.UI.Shared.initialisePage('#Userform', '.listboxDiv');
        });

</script>