@model MEPS.MEPSTemp.Model.IAlarmSearchViewModel


@using (Html.BeginForm("IndexEdit", "Alarm", FormMethod.Post, new { id = "AlarmSearch" }))
{
    @Html.Hidden("hdnAlarmId")

    <div class="row">
        <div class="col-lg-12">
            <div class="panel CustomSearchBox">
                <div class="panel-body">
                    <div class="">
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label class="control-label">Search</label>
                                <input type="text" class="form-control" id="txtSearch" />
                            </div>
                            <div class="col-sm-6">
                                <label class="control-label">Search Field</label>
                                @Html.DropDownListFor(m => m.SearchId, new SelectList(Model.DDLSearch, "Value", "Text"), new { @id = "ddlSearch", @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <span class="visible-md visible-sm visible-xs">&nbsp;</span>
                                <input type="button" class="btn btn-primary" id="btnAlarmSearch" value="Search" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="DivAlarmGrid">
        @Html.Partial("_AlarmGrid", Model.AlarmList)
    </div>

    <script src="~/Scripts/AppJS/alarm/mepstemp.alarm.search.js"></script>
    <script>
        $(document).ready(function () {
            MEPSTEMP.UI.Alarm.Search.initialisePage();
        });

    </script>
}
