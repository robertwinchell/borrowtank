@model MEPS.MEPSTemp.Model.SystemSearchViewModel
@{
    ViewBag.Title = "System";
}
@using (Html.BeginForm("IndexEdit", "System", FormMethod.Post, new { id = "SystemSearch" }))
{
    @Html.Hidden("hdnSystemId")
          <div class="row">
            <div class="col-lg-12">
                <div class="panel CustomSearchBox">
                    <div class="panel-body">
                        <div class="">
                            <div class="form-group">
                                <div class="col-sm-6">
                                    <label class="control-label">System</label>

                                    @Html.Partial("~/Views/Shared/_Partial/_ddlWithClick.cshtml", Model.DDLSystem)
                                </div>
                                <div class="col-sm-6">
                                    <label class="control-label">Organization</label>
                                    <div id="DivOrganization">
                                        @Html.Partial("~/Views/Shared/_Partial/_ddlWithClick.cshtml", Model.DDLOrganization)

                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-6">
                                    <label class="control-label">Search</label>
                                    <input type="text" class="form-control" id="txtSearch" />
                                </div>
                                <div class="col-sm-6">
                                    <label class="control-label">Search Field</label>
                                    @Html.DropDownListFor(m => m.SearchId, new SelectList(Model.DDLSearch, "Value", "Text"), new { @id = "ddlSearch", @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-6">
                                    <span class="visible-md visible-sm visible-xs">&nbsp;</span>
                                    <input type="button" class="btn btn-primary" id="btnSystemSearch" value="Search" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="DivSystemGrid">
            @Html.Partial("_SystemGrid", Model.SystemList)
        </div>
        <script src="~/Scripts/AppJS/system/mepstemp.system.search.js"></script>
       
        <script>
            $(document).ready(function () {
                MEPSTEMP.UI.System.Search.initialisePage();
                
            });
        </script>
   
}

