@model MEPS.MEPSTemp.Model.AlarmSoundSearchViewModel
@{
    ViewBag.Title = "Alarm Sound Search";
    }

@using (Html.BeginForm("IndexEdit", "AlarmSound", FormMethod.Post, new { id = "AlarmSoundSearch" }))
{
    @Html.Hidden("hdnAlarmSoundId")
    <div class="row">
        <div class="col-lg-12">
            <div class="panel CustomSearchBox">
                <div class="panel-body">
                    <div class="">
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="control-label">Search</label>
                                <input type="text" class="form-control" id="txtSearch" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <span class="visible-md visible-sm visible-xs">&nbsp;</span>
                                <input type="button" class="btn btn-primary" value="Search" id="btnAlarmSoundSearch" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="DivAlarmSoundGrid">
        @Html.Partial("_AlarmSoundGrid", Model.AlarmSoundList)
    </div>
    <script src="~/Scripts/AppJS/alarmsound/mepstemp.alarmsound.search.js"></script>
    <script>
        $(document).ready(function () {
            MEPSTEMP.UI.AlarmSound.Search.initialisePage();
        });
    </script>
}