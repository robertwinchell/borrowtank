@model MEPS.MEPSTemp.Model.ThermoStateTypeSearchModel

<!-- Content Start -->
@using (Html.BeginForm("IndexEdit", "ThermostatType", FormMethod.Post, new { id = "ThermostateTypeSearch" }))
{
    @Html.Hidden("hdnThermostateTypeId")
  
        <div class="row">
            <div class="col-lg-12">
                <div class="panel CustomSearchBox">
                    <div class="panel-body">
                        <div class="">
                            <div class="form-group">
                                <div class="col-sm-6">
                                    <label class="control-label">Search</label>
                                    <input type="text" class="form-control" id="txtSearch" />
                                </div>
                                <div class="col-sm-6">
                                    <label class="control-label">Search Field</label>
                                    @Html.DropDownListFor(m => m.SearchId, new SelectList(Model.DDLSearch, "Value", "Text"), new { @id = "ddlSearch", @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-6">
                                    <span class="visible-md visible-sm visible-xs">&nbsp;</span>
                                    <input type="button" class="btn btn-primary" id="btnThermostateTypeSearch" value="Search" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="DivThermostateTypeGrid">
            @Html.Partial("_ThermostateTypeGrid", Model.ThermoStateTypeList)
        </div>
   

    <script src="~/Scripts/AppJS/thermostateType/mepstemp.thermostateType.search.js"></script>
    <script>
        $(document).ready(function () {
            MEPSTEMP.UI.ThermostateType.Search.initialisePage();
        });

    </script>
            <!-- Content End -->
}
