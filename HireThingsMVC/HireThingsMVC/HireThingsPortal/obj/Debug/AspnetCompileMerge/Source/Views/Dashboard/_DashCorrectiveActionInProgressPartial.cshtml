@model MEPS.MEPSTemp.Model.IDashCorrectiveActionTakenModel

<!-- ############# Corrective Actions Taken ############# -->
<div class="modal fade" style="display:none;" id="corrActBeingTakenModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title text-dark-gray text-uppercase text-semibold text-md" id="myModalLabel">Corrective Actions In Progress</h4>
            </div>
            <div class="modal-body">
                @using (Ajax.BeginForm("DashCorrectiveActionInProgressPartial", "Dashboard", new AjaxOptions { }, new { @id = "DashCorrActionInProgressForm" }))
                {
                    @Html.HiddenFor(m=>m.DashboardErrorId)
                    <div class="form-horizontal">

                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">Dashboard Error:</label>
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.DashboardErrorName, new { @class = "form-control CustomReadOnly", @readonly = true })

                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">Corr. Action Date:</label>
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.CorrActionInProgressDate, new { @class = "form-control CustomReadOnly", @readonly = true })
                                                                 
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">Corr. Action User:</label>
                                <div class="col-lg-7"><input type="text" class="form-control" value="@User.Identity.Name" disabled="" /></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">Notes:</label>
                                <div class="col-lg-7">
                                    @Html.TextAreaFor(m => m.CorrActionInProgressNotes, new { @class = "form-control requiredEl" })
                                    @Html.ValidationMessageFor(m => m.CorrActionInProgressNotes, "", new { @class = "text-danger" })

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button  role="button"type="button" class="btn btn-primary btn-sm" data-dismiss="modal">Cancel</button>
                        <button role="button" type="submit" id="btnCorrActionInProgressSave" class="btn btn-primary btn-sm">Save</button>
                    </div>
               }
            </div>
        </div>
    </div>

</div>