@model MEPS.MEPSTemp.Model.SystemModel
@{
    ViewBag.Title = "System";
}

    @ViewBag.Saved
    @using (Html.BeginForm("Index", "System"))
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="panel">
                    <header class="panel-heading oflo-h mb-lg">
                        <h2 class="pull-left panel-title text-dark-gray text-semibold text-uppercase pt-sm">@ViewData["FormTitle"]</h2>
                        <div class="pull-right"><input type="button" value="Back" class="btn btn-primary pull-right btn-sm" onclick="location.href='@Url.Action("Index","SystemSearch")'"></div>
                    </header>
                    <div class="panel-body">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <label class="col-lg-3 control-label">System ID:</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(m => m.SystemId, new { @class = "form-control CustomReadOnly", @readonly = true })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <label class="col-lg-3 control-label">System Control No:</label>
                                    <div class="col-lg-7">
                                        @if(Model != null && Model.SystemId == 1)
                                        { 
                                            @Html.TextBoxFor(m => m.SystemControlNo, new { @class = "form-control hasKeyLocking", @data_keylocking = "alphanumeric", @maxlength = "50", @readonly = true, @Id = "syscontrolno" })
                                        }
                                        else
                                        {
                                            @Html.TextBoxFor(m => m.SystemControlNo, new { @class = "form-control hasKeyLocking", @data_keylocking = "alphanumeric", @maxlength = "50"})
                                        }
                                        
                                            @Html.ValidationMessageFor(m => m.SystemControlNo, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <label class="col-lg-3 control-label">System Name:</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(m => m.SystemName, new { @class = "form-control", @id = "txtSystem", @maxlength = "100" })
                                        @Html.ValidationMessageFor(m => m.SystemName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <label class="col-lg-3 ib control-label">Is Active:</label>
                                    <div class="col-lg-7 va-bottom ib">
                                        @if(Model != null && Model.SystemId == 1)
                                        { 
                                            @Html.CheckBoxFor(m => m.IsActive, new { @class = "mt-sm", onclick = "return false" })
                                        }
                                        else
                                        {
                                            @Html.CheckBoxFor(m => m.IsActive, new { @class = "mt-sm"})
                                        }
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Buttom Buttons -->
            <div class="col-lg-12">
                <p class="pull-right">
                    <a role="button" class="btn btn-primary btn-sm" href="~/SystemSearch/Index">Cancel</a>
                    &nbsp;
                    <button type="submit" class="btn btn-primary btn-sm">&nbsp;Save&nbsp;</button>
                </p>
            </div>
        </div>
    <script>
        $(document).ready(function () {
            $("#syscontrolno").focus();
        MEPSTEMP.Global.KeyLocking('.hasKeyLocking', 'data-keylocking');
        MEPSTEMP.Global.ApplyMenuSelection('System');
    });
    </script>
    }


