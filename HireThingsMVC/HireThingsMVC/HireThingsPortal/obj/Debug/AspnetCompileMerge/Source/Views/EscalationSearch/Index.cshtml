@model MEPS.MEPSTemp.Model.EscalationSearchViewModel
@{
    ViewBag.Title = "Escalation";
}

@using (Html.BeginForm("IndexEdit", "Escalation", FormMethod.Post, new { id = "EscalationSearch" }))
{
    @Html.Hidden("hdEscalationId")
<!-- Content Start -->


    <div class="row">
        <div class="col-lg-12">
            <div class="panel CustomSearchBox">
                <div class="panel-body">
                    <div class="">
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="control-label">Escalation Name</label>
                                <input type="text" class="form-control" id="txtSearch" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <span class="visible-md visible-sm visible-xs">&nbsp;</span>
                                <input type="button" class="btn btn-primary" value="Search" id="btnEscalationSearch" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="DivEscalationGrid">
        @Html.Partial("_EscalationGrid", Model.EscalationList)
    </div>

    <script src="~/Scripts/AppJS/escalation/mepstemp.escalation.search.js"></script>
    <script>
        $(document).ready(function () {
            MEPSTEMP.UI.Escalation.Search.initialisePage();
        });
    </script>


<!-- Content End -->
}