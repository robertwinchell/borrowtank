<link href="~/Content/bootstrap-tagsinput.css" rel="stylesheet" />
@model MEPS.MEPSTemp.Model.EmailGroupModel
@{
    ViewBag.Title = "Email Group";
}
<link href="~/Content/chosen.css" rel="stylesheet" />
<link href="~/Content/bootstrap-tagsinput.css" rel="stylesheet" />

@using (Ajax.BeginForm("Index", "EmailGroup", new AjaxOptions { }, new { @id = "EmailGroupForm" }))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel">
                <header class="panel-heading oflo-h mb-lg">
                    <h2 class="pull-left panel-title text-dark-gray text-semibold text-uppercase pt-sm">@ViewData["FormTitle"]</h2>
                    <div class="pull-right">
                        <input type="button" value="Back" class="btn btn-primary pull-right btn-sm" onclick="location.href='@Url.Action("Index", "EmailGroupSearch")'" />
                    </div>
                </header>
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">Email Group ID:</label>
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.EmailGroupId, new { @class = "form-control CustomReadOnly", @readonly = true })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">Name:</label>
                                <div class="col-lg-7">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control ", @maxlength = "100" })
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">System:</label>
                                <div class="col-lg-7">
                                    @Html.Partial("~/Views/Shared/_Partial/_ddlWithClick.cshtml", Model.SystemList)
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">Description:</label>
                                <div class="col-lg-7">
                                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @maxlength = "500" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">Subject:</label>
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.MailSubject, new { @class = "form-control", @maxlength = "50" })
                                    @Html.ValidationMessageFor(m => m.MailSubject, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">Body:</label>
                                <div class="col-lg-7">
                                    @Html.TextAreaFor(m => m.MailBody, new { @class = "form-control", @maxlength = "500" })
                                    @Html.ValidationMessageFor(m => m.MailBody, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">To (Mail):</label>
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.MailTo, new { @class = "form-control tagedInput", @maxlength = "500" })
                                    @Html.ValidationMessageFor(m => m.MailTo, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
               
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">CC (Mail):</label>
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.MailCC, new { @class = "form-control tagedInput", @maxlength = "500" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 control-label">BCC (Mail):</label>
                                <div class="col-lg-7">
                                    @Html.TextBoxFor(m => m.MailBcc, new { @class = "form-control tagedInput", @maxlength = "500" })
                                </div>
                            </div>
                        </div>
 



                        <div class="form-group">
                            <div class="col-sm-12">
                                <label class="col-lg-3 ib control-label">Is Active:</label>
                                <div class="col-lg-7 va-bottom ib">
                                    @Html.CheckBoxFor(m => m.IsActive, new { @class = "mt-sm" })
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- Buttom Buttons -->
        <div class="col-lg-12">
            <p class="pull-right">
                <a role="button" class="btn btn-primary btn-sm" href="~/EmailGroupSearch/Index">Cancel</a>
                &nbsp;
                <button type="submit" class="btn btn-primary btn-sm">&nbsp;Save&nbsp;</button>
            </p>
        </div>
    </div>
    }
<script src="~/Scripts/chosen.jquery.min.js"></script>
<script src="~/Scripts/bootstrap-tagsinput.min.js"></script>
<script src="~/Scripts/bootstrap-typeahead.js"></script>
<script src="~/Scripts/AppJS/EmailGroup/mepstemp.emailgroup.js"></script>

<!-- Content End -->
<script>
    $(document).ready(function () {
        MEPSTEMP.Global.ApplyMenuSelection('EmailGroup');
    });
</script>
@if (Model.EmailGroupId > 0)
{
    <script>
        $(document).ready(function () {
            //1 incase of record updation
            MEPSTEMP.UI.EmailGroup.initialisePage(1);
        });
    </script>
}
else
{
    <script>
        $(document).ready(function () {
            //0 incase of record creation
            MEPSTEMP.UI.EmailGroup.initialisePage(0);
        });
    </script>
}
<script type="text/javascript">
    MEPSTEMP.Global.KeyLocking('.hasKeyLocking', 'data-keylocking');
</script>