@model MEPS.MEPSTemp.Model.ProbeSearchViewModel
@{
    ViewBag.Title = "Probe";
}
@using (Html.BeginForm("IndexEdit", "Probe", FormMethod.Post, new { id = "ProbeSearch" }))
{
    @Html.Hidden("hdnProbeId")
    <div class="row">
        <div class="col-lg-12">
            <div class="panel CustomSearchBox">
                <div class="panel-body">
                    <div class="">
                        <div class="form-group">
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label class="control-label">Search</label>
                                <input type="text" class="form-control" id="txtSearch" />
                            </div>
                            <div class="col-sm-6">
                                <label class="control-label">Search Field</label>
                                @Html.DropDownListFor(m => m.SearchId, new SelectList(Model.DDLSearch, "Value", "Text"), new { @id = "ddlSearch", @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <span class="visible-md visible-sm visible-xs">&nbsp;</span>
                                <input type="button" class="btn btn-primary" value="Search" id="btnProbeSearch" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="DivProbeGrid">
        @Html.Partial("_ProbeGrid", Model.ProbeList)
    </div>
        
   
    <!-- Content End -->
}
<script src="~/Scripts/AppJS/probe/mepstemp.probe.search.js"></script>
<script>
    $(document).ready(function () {
        MEPSTEMP.UI.Probe.Search.initialisePage();
    });

</script>