@model List<MEPS.MEPSTemp.Model.ITempReadingModel>


<div class="row">
    <div class="col-md-12">
        <div class="panel">
            <header class="panel-heading">
                <div class="panel-actions pull-right"><a class="fa fa-caret-down" href="#"></a></div>
                <h2 class="panel-title"><strong>DEVICE STATUS</strong></h2>
            </header>
            <div class="panel-body">
                <div class="table-responsive" style=" max-height: 220px; overflow: auto;">
                    <table class="table table-striped table-hover mb-none" id="tblDashTempReadingGrid">
                        <thead>
                            <tr>
                                <th>Organization Name</th>
                                <th>Equipment Name</th>
                                <th>Last Contact</th>
                                <th>Last Reading</th>
                            </tr>
                        </thead>
                        <tbody id="tblDashTempReadingBody">
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.OrganizationName</td>
                                        <td>@item.DeviceName <a style="display:none" data-devicename="@item.DeviceName"></a></td>
                                        <td>@item.ReadingDate</td>
                                        <td>@item.TempReading <sup>o</sup>C</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    @if (Model == null || Model.Count == 0)
                    {

                        @Html.Partial("~/Views/Shared/_Partial/_NoRecordFound.cshtml")
                    }
                </div>

                <div class="datatables-footer">
                    <span class="CustomPagination-TotalRecord">
                        <span class="ib va-bottom"> 
                        Total <span id="dashTempReadingCount"> @if (Model != null && Model.Count > 0)
                        { @Model[0].TRows}
                        else
                        {@Html.Raw("0");
                        }</span> Records</span>
                    </span>
                </div>                
            </div>
        </div>
    </div>
</div>
