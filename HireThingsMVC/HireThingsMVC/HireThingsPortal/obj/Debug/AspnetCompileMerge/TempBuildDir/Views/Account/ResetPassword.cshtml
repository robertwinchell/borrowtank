@model MEPS.MEPSTemp.Model.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Code)

    <!-- Content Start -->
    <section class="body-sign">
        <div class="center-sign">
            <div class="center mb-md">
                <a href="#" class="logo">
                    <img src="~/Content/assets/images/logo-large.png" alt="MEPSTemp" />
                </a>
            </div>

            <div class="panel panel-sign">
                <div class="panel-body">
                    <div>
                        <label>Email:</label>
                        <div class="input-group input-group-icon">
                            @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control input-lg" })
                            @Html.ValidationMessageFor(m => m.EmailId, "", new { @class = "text-danger" })
                            <span class="input-group-addon">
                                <span class="icon icon-lg">
                                    <i class="fa fa-lock"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div>
                        <label>New password:</label>
                        <div class="input-group input-group-icon">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            <span class="input-group-addon">
                                <span class="icon icon-lg">
                                    <i class="fa fa-lock"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="pb-none">
                        <div class="clearfix">
                            <label>Confirm New Password:</label>
                        </div>
                        <div class="input-group input-group-icon">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-lg" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            <span class="input-group-addon">
                                <span class="icon icon-lg">
                                    <i class="fa fa-lock"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 text-right">
                            <button type="submit" class="btn btn-primary btn-block mt-md">Reset</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Content End -->
}