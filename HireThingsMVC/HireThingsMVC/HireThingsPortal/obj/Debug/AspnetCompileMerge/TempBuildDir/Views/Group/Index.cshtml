@model MEPS.MEPSTemp.Model.GroupModel
@{
    ViewBag.Title = "Group";
}

    @using (Ajax.BeginForm("Index", "Group", new AjaxOptions { }, new { @id = "GroupForm" }))
    {
        @Html.HiddenFor(m => m.TempGroupId, new { @id = "hdnTempGroupId" })
        <div class="row">
            <div class="col-lg-12">

                <div class="panel">
                    <header class="panel-heading oflo-h mb-lg">
                        <h2 class="pull-left panel-title text-dark-gray text-semibold text-uppercase pt-sm">@ViewData["FormTitle"]</h2>
                        <div class="pull-right"><input type="button" value="Back" class="btn btn-primary pull-right btn-sm" onclick="location.href='@Url.Action("Index", "GroupSearch")'" /></div>
                    </header>
                    <div class="panel-body">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <label class="col-lg-3 control-label">Group Id:</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(m => m.TempGroupId, new { @class = "form-control disabled", @maxlength = "50" ,@disabled="disbaled"})
                                        
                                    </div>
                                </div>
                            </div>
                             <div class="form-group">
                                <div class="col-sm-12">
                                    <label class="col-lg-3 control-label">Group Name:</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(m => m.GroupName, new { @class = "form-control", @maxlength = "50" })
                                        @Html.ValidationMessageFor(m => m.GroupName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <label class="col-lg-3 control-label">Group Notes:</label>
                                    <div class="col-lg-7">
                                        @Html.TextAreaFor(m => m.GroupNotes, new { @class = "form-control", @maxlength = "1024" })
                                        @Html.ValidationMessageFor(m => m.GroupNotes, "", new { @class = "text-danger" })
                                    
                                    
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <label class="col-lg-3 control-label">System:</label>
                                    <div class="col-lg-7">
                                        @Html.Partial("~/Views/Shared/_Partial/_ddlWithClick.cshtml", Model.SystemList)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <label class="col-lg-3 ib control-label">Is Active:</label>
                                    <div class="col-lg-7 va-bottom ib">
                                        @Html.CheckBoxFor(m => m.IsActive, new { @class = "mt-sm"})                                    
                                </div>
                            </div>
                           </div>                        
                            @Html.Partial("~/Views/Shared/_Partial/_Listbox.cshtml", Model.EscalationModel)                            
                            @Html.Partial("~/Views/Shared/_Partial/_Listbox.cshtml", Model.DeviceModel)
                     
                               
                            </div>
                    </div>
                </div>
            </div>

            <!-- Buttom Buttons -->
            <div class="col-lg-12">
                <p class="pull-right">
                    <a role="button" class="btn btn-primary btn-sm" href="~/GroupSearch/Index">Cancel</a>
                    &nbsp;
                    <button type="submit" role="button" id="saveBtn" class="btn btn-primary btn-sm">&nbsp;Save&nbsp;</button>
                </p>
            </div>
        </div>
     
    }

<script src="~/Scripts/AppJS/Shared/mepstemp.shared.js"></script>
<script src="~/Scripts/AppJS/group/mepstemp.group.js"></script>
<script>
    $(document).ready(function () {           
        MEPSTEMP.UI.Group.initialisePage()
        }); 
</script>