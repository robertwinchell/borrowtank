@model MEPS.MEPSTemp.Model.RoleSearchViewModel
@{
    ViewBag.Title = "Role Search";
}

@using (Html.BeginForm("IndexEdit", "Role", FormMethod.Post, new { id = "RoleSearch" }))
{
    @Html.Hidden("hdRoleId")
    <!-- Content Start -->
           <div class="row">
            <div class="col-lg-12">
                <div class="panel CustomSearchBox">
                    <div class="panel-body">
                        <div class="">
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <label class="control-label">Search</label>
                                    <input type="text" class="form-control" id="txtSearch" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-6">
                                    <span class="visible-md visible-sm visible-xs">&nbsp;</span>
                                    <input type="button" class="btn btn-primary" value="Search" id="btnRoleSearch" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div id="DivRoleGrid">
            @Html.Partial("_RoleGrid", Model.RoleList)
        </div>

        <script src="~/Scripts/AppJS/role/mepstemp.role.search.js"></script>
        <script>
        $(document).ready(function () {
            MEPSTEMP.UI.Role.Search.initialisePage();
        });
        </script>

}            <!-- Content End -->